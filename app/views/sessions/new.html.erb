<div class="row text-center">
  <div class="jumbotron col-xs-4 col-xs-offset-4">
    <h1>Log In... </h1>
	<h3>... or just hit that big old demo button </h3>
      <form action="<%= users_url %>" method="POST" accept-charset="utf-8">
        <input type="hidden" name="authenticity_token"
               value="<%= form_authenticity_token %>" id="authenticity_token">

        <input type="hidden" name="user[username]"
               value="Guest<%= User.count + 1 %>">
        <input type="hidden" name="user[password]" value="password">

        <input type="hidden" name="user[email]"
               value="Guest<%= User.count + 1 %>@foobar.com">
        <input type="hidden" name="user[password]" value="password">

        <input type="submit" value="Demo Account" class="btn btn-primary btn-lg">
      </form>
	  <br>


    <form action="<%= session_url %>" method="POST">
      <input type="hidden" name="authenticity_token"
             value="<%= form_authenticity_token %>" id="authenticity_token">

      <div class="form-group">
        <!-- <label for="username">Username</label> -->
        <input id="username" type="text" placeholder="Username" name="user[username]" class="form-control">
      </div>

      <div class="form-group">
        <!-- <label for="password">Password</label> -->
        <input id="password" type="password" placeholder="Password" name="user[password]" class="form-control">
      </div>

      <input id="logout" type='submit' value='Log In' class="btn btn-default btn-lg">
    </form>


  </div>
</div>